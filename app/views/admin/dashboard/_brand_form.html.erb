<div id="brand_form">
  <%= form_with model: brand, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name,
                       placeholder: "e.g. Nike",
                       required: true,
                       class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <%= error_messages_for(f.object) %>

    <%= f.submit "Create Brand",
                 class: "w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 font-medium cursor-pointer" %>
  <% end %>
</div>